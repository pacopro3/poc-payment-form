---
import Layout from '../layouts/Layout.astro';
import PaymentForm from '../components/organisms/PaymentForm';
---

<Layout title="Payment Form">
	<main>
		<h1>Payment Form</h1>
		<PaymentForm client:load />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>